{
  "appRoot"            	: "site/",
  "npm": {
    "assetFileTypes"	: "png,gif,svg,jpeg,jpg,woff,woff2,eot,ttf,otf",
    "stylesFile"    	: "_bundle.scss",
    "src"           	: "node_modules",
    "assetsDest"    	: "site/dist",
    "config"            : "package.json"
  },
  "fonts": {
    "src"            	: "src/fonts/**/*",
    "dest"           	: "site/fonts"
  },
  "images": {
    "src"             	: "src/images/**/*",
    "dest"            	: "site/images"
  },
  "scripts": {
    "src"     : ["src/script/**/*.js"]
  },
  "styles": {
    "src"          		: ["src/styles/styles.scss"],
    "srcFolder"        	: "src/styles",
    "componentsSrc"		: "src/styles/components",
    "componentsIgnore"	: [],
    "dest"         		: "site/css",
    "lintConfig"     	: "node_modules/webdev-scss-styleguide/.sass-lint.yml",
    "lintIgnore"		: ["src/styles/_npms.scss", "src/styles/_sprite.scss"],
    "includePaths"   	: ["node_modules"]
  },
  "sprite": {
    "src"			 	: "src/images/sprite/*.png",
    "srcFolder"			: "src/images/sprite",
    "imgName"		 	: "sprite.png",
    "retinaImgName"		: "sprite@2x.png",
    "cssName"		 	: "_sprite.scss",
    "imgPath"		 	: "../images/sprite.png",
    "retinaImgPath"		: "../images/sprite@2x.png",
    "retinaSrcFilter"	: "src/images/sprite/*@2x.png",
    "retinaSuffix" 		: "@2x"
  },
  "utilities": {
    "browserSyncHtdocs" : "d:\\php\\",
    "browserSyncOpen"   : "external",
    "watchSrc"          : "templates/**/*.html"
  },
  "stealTools": {
    "bundleAssets": true,
    "dest": "site/dist",
    "bundleSteal": false,
    "sourceMaps": true,
    "minify": true,
    "debug": true,
    "quiet": false,
    "maxBundleRequests": 3,
    "maxMainRequests": 3
  }
}