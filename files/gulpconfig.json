{
  "appRoot"            	: "site/",
  "bower": {
    "assetFileTypes"	: "png,gif,svg,jpeg,jpg,woff,woff2,eot,ttf,otf",
    "scriptFile"    	: "bower.min.js",
    "stylesFile"    	: "_bower.scss",
    "src"           	: "bower_components",
    "assetsDest"    	: "site/dist",
    "config"            : "bower.json"
  },
  "fonts": {
    "src"            	: "src/fonts/**/*",
    "dest"           	: "site/fonts"
  },
  "images": {
    "src"             	: "src/images/**/*",
    "dest"            	: "site/images"
  },
  "scripts": {
    "bodyScriptSrc"     : ["src/script/body/**/*.js"],
    "headScriptSrc"     : ["src/script/head/**/*.js"],
    "pageScriptSrc"     : "src/script/page",
    "testScriptSrc"     : ["src/script/body/**/*.spec.js", "src/script/head/**/*.spec.js", "src/script/page/**/*.spec.js"]
    "dest"	         	: "site/script",
    "headScriptFile"    : "headscripts.min.js",
    "bodyScriptFile"    : "script.min.js"
  },
  "styles": {
    "src"          		: ["src/styles/styles.scss"],
    "srcFolder"        	: "src/styles",
    "componentsSrc"		: "src/styles/components",
    "componentsIgnore"	: [],
    "dest"         		: "site/css",
    "lintConfig"     	: "node_modules/webdev-scss-styleguide/.sass-lint.yml",
    "lintIgnore"		: ["src/styles/_bower.scss", "src/styles/_sprite.scss"],
    "includePaths"   	: ["bower_components"]
  },
  "sprite": {
    "src"			 	: "src/images/sprite/*.png",
    "srcFolder"			: "src/images/sprite",
    "imgName"		 	: "sprite.png",
    "retinaImgName"		: "sprite@2x.png",
    "cssName"		 	: "_sprite.scss",
    "imgPath"		 	: "../images/sprite.png",
    "retinaImgPath"		: "../images/sprite@2x.png",
    "retinaSrcFilter"	: "src/images/sprite/*@2x.png",
    "retinaSuffix" 		: "@2x"
  },
  "utilities": {
    "browserSyncHtdocs" : "d:\\php\\",
    "browserSyncOpen"   : "external",
    "watchSrc"          : "templates/**/*.html"
  }
}